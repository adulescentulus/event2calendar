<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>lambda-package</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.build.directory}${file.separator}${artifactId}-runner</source>
            <outputDirectory>/target/</outputDirectory>
            <destName>lambda</destName>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>src/assembly/bootstrap</source>
            <outputDirectory>/</outputDirectory>
            <destName>bootstrap</destName>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>${env.JAVA_HOME}/jre/lib/security/cacerts</source>
            <outputDirectory>/</outputDirectory>
            <destName>cacerts</destName>
        </file>
        <file>
            <source>${env.JAVA_HOME}/jre/lib/amd64/libsunec.so</source>
            <outputDirectory>/lib/</outputDirectory>
            <destName>libsunec.so</destName>
        </file>
    </files>
</assembly>
